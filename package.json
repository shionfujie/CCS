{
	"name": "ccs",
	"displayName": "CCS",
	"description": "Context Control System",
	"version": "0.0.0",
	"engines": {
		"vscode": "^1.52.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:contextExplorer"
	],
	"main": "./out/extension.js",
	"contributes": {
		"views": {
			"explorer": [
				{
					"id": "ccs.contextExplorer",
					"name": "Contexts",
					"contextualTitle": "Context Explorer"
				}
			]
		},
		"commands": [
			{
				"command": "ccs.createNewContext",
				"title": "Create New Context",
				"category": "Context",
				"icon": {
					"dark": "./media/dark/add.svg",
					"light": "./media/light/add.svg"
				}
			},
			{
				"command": "ccs.renameContext",
				"title": "Rename"
			},
			{
				"command": "ccs.removeContext",
				"title": "Remove Context",
				"icon": {
					"dark": "./media/dark/trash.svg",
					"light": "./media/light/trash.svg"
				}
			},
			{
				"command": "ccs.addItemToContext",
				"title": "Add Item to Context",
				"category": "Context"
			},
			{
				"command": "ccs.removeItemFromContext",
				"title": "Remove Item from Context",
				"icon": {
					"dark": "./media/dark/remove.svg",
					"light": "./media/light/remove.svg"
				}
			}
		],
		"menus": {
			"explorer/context": [
				{
					"command": "ccs.addItemToContext",
					"group": "0_ccs.context"
				}
			],
			"view/item/context": [
				{
					"command": "ccs.renameContext",
					"when": "viewItem == ccs.context",
					"group": "navigation@1"
				},
				{
					"command": "ccs.removeContext",
					"when": "viewItem == ccs.context",
					"group": "navigation@2"
				},
				{
					"command": "ccs.removeItemFromContext",
					"when": "viewItem == ccs.contextItem"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"pretest": "npm run compile && npm run lint",
		"lint": "eslint src --ext ts",
		"test": "node ./out/test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.52.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"@typescript-eslint/eslint-plugin": "^4.1.1",
		"@typescript-eslint/parser": "^4.1.1",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}